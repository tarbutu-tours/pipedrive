{
  "name": "pipedrive-sales-ai",
  "version": "1.0.0",
  "description": "Pipedrive Sales AI Assistant with human-in-the-loop approval",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "postinstall": "prisma generate --schema=prisma/schema.prisma",
    "dev": "prisma generate && tsx watch src/server.ts",
    "build": "tsc && node scripts/copy-ui.cjs",
    "start": "node dist/server.js",
    "worker": "tsx src/worker/index.ts",
    "worker:dev": "tsx watch src/worker/index.ts",
    "tunnel": "npx localtunnel --port 3000",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "prisma db seed",
    "generate-secret": "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@fastify/cookie": "^10.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/static": "^8.0.2",
    "@fastify/view": "^9.0.1",
    "@prisma/client": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "fastify": "^5.1.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^8.0.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "point-of-view": "^6.0.0",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.9.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.10",
    "prisma": "^6.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=20"
  }
}
