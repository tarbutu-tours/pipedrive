# Database (required for API + worker)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/pipedrive_ai"

# Pipedrive API – חיבור לחשבון שלך (ראה PIPEDRIVE_CONNECTION.md)
# טוקן: הגדרות > העדפות אישיות > API ב־ https://app.pipedrive.com/settings/api
PIPEDRIVE_API_TOKEN=your_pipedrive_api_token_here
# דומיין: כתובת החברה (למשל https://mycompany.pipedrive.com) או https://api.pipedrive.com
PIPEDRIVE_DOMAIN=https://api.pipedrive.com

# Anthropic (optional – if not set, rules-based planner is used)
ANTHROPIC_API_KEY=

# App
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Auth (for session cookie)
SESSION_SECRET=change_me_to_a_long_random_string

# Rate limits (requests per minute per IP)
RATE_LIMIT_CHAT=20
RATE_LIMIT_CONFIRM=30

# Daily report – דוח אקסל "חדרים פנויים" נשלח כל בוקר בשעה 9:00 (לפי worker)
# הפעל את ה-worker: pnpm run worker
REPORT_EMAIL=your_email@example.com

# Outlook / Office 365 – השתמש בהגדרות האלה כדי לשלוח מהמייל שלך ב-Outlook
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@outlook.com
SMTP_PASS=your_password
